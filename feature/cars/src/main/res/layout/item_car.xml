<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="car"
            type="com.konyekokim.core.data.entities.Car" />

        <variable
            name="viewModel"
            type="com.konyekokim.cars.CarsViewModel" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        android:onClick="@{() -> viewModel.openCarDetail(car.id)}"
        app:cardCornerRadius="@dimen/car_item_card_radius"
        app:cardElevation="@dimen/car_item_card_elevation">

        <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="30dp"
                android:id="@+id/carImage"
                app:imageUrl="@{car.imageUrl}"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/carName"
                android:text="@{car.title}"
                app:layout_constraintTop_toBottomOf="@id/carImage"
                app:layout_constraintStart_toStartOf="@id/carImage"
                app:layout_constraintEnd_toEndOf="@id/carImage"
                android:layout_marginEnd="30dp"
                android:textAlignment="textStart"
                android:singleLine="true"
                android:maxLines="1"
                tools:text="Toyota Camry"
                android:ellipsize="end"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{car.gradeScore.toString()}"
                android:id="@+id/carRating"
                app:layout_constraintEnd_toEndOf="@id/carImage"
                android:maxLength="2"
                app:layout_constraintTop_toBottomOf="@id/carImage"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toTopOf="@id/carRating"
                app:layout_constraintBottom_toBottomOf="@id/carRating"
                app:layout_constraintEnd_toStartOf="@id/carRating"
                android:layout_marginEnd="6dp"
                android:id="@+id/carRatingIcon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/carPrice"
                android:text="@{car.marketplacePrice}"
                app:layout_constraintTop_toBottomOf="@id/carName"
                app:layout_constraintStart_toStartOf="@id/carImage" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>
